{% form_theme form 'tailwind_2_layout.html.twig' %}
{{ form_start(form) }}
  <div class="space-y-4">
    {{ form_row(form.name, {attr: {class: 'mt-1 block w-full border rounded p-2'}}) }}
    {{ form_row(form.email, {attr: {class: 'mt-1 block w-full border rounded p-2'}}) }}
    {{ form_row(form.phone, {attr: {class: 'mt-1 block w-full border rounded p-2'}}) }}
      {{ form_row(form.cards) }}
      <p>
          <a href="{{ path('admin_card_new') }}" target="_blank" class="text-sm">+ Cr√©er un carton</a>
      </p>
