{% extends 'admin/_layout.html.twig' %}

{% block title %}Cartons{% endblock %}

{% block admin_body %}
<div class="bg-white rounded shadow p-6">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-bold">Cartons</h1>
    <a href="{{ path('admin_card_new') }}" class="px-3 py-1 bg-blue-600 text-white rounded">Nouveau</a>
  </div>

  {% for type, messages in app.flashes %}
    {% for msg in messages %}
      <div class="mb-2 p-2 rounded {{ type == 'success' ? 'bg-green-100 text-green-800' : (type == 'error' ? 'bg-red-100 text-red-800' : 'bg-gray-100') }}">{{ msg }}</div>
    {% endfor %}
  {% endfor %}

  <form method="get" class="mb-4">
    <div class="flex gap-2">
      <input type="text" name="search" value="{{ search }}" placeholder="Rechercher par référence, joueur ou événement..." class="flex-1 px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
      <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Rechercher</button>
      {% if search %}
        <a href="{{ path('admin_card_index') }}" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">Réinitialiser</a>
      {% endif %}
    </div>
  </form>

  <div class="overflow-x-auto">
    <table class="min-w-full border">
      <thead>
        <tr class="bg-gray-100">
          <th class="p-2 text-left border">ID</th>
          <th class="p-2 text-left border">Événement</th>
          <th class="p-2 text-left border">Référence</th>
          <th class="p-2 text-left border">Joueur</th>
          <th class="p-2 text-left border">Grille</th>
          <th class="p-2 text-left border">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for c in matrix %}
          <tr>
            <td class="p-2 border ">{{ c.id }}</td>
            <td class="p-2 border ">{{ c.event ? c.event.name : '—' }}</td>
            <td class="p-2 border ">{{ c.reference }}</td>
            <td class="p-2 border ">{{ c.player ? c.player.name : '—' }}</td>
            <td class="p-2 border text-center">
                <table class="border-collapse border-2 border-green-700 bg-green-50 text-xs inline-block">
                    <tbody>
                    {% for line in c.grid %}
                        <tr>
                            {% for col in 0..8 %}
                                <td class="border border-green-600 text-center font-semibold {{ line[col] is defined ? 'bg-white text-green-900' : 'bg-green-200 text-transparent' }}" style="width: 24px; height: 20px; padding: 2px;">
                                    {{ line[col] ?? '.' }}
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </td>
            <td class="p-2 border">
              <a href="{{ path('admin_card_edit', {id: c.id}) }}" class="px-2 py-1 text-sm bg-blue-600 text-white rounded">Éditer</a>
              <form method="post" action="{{ path('admin_card_delete', {id: c.id}) }}" class="inline" onsubmit="return confirm('Supprimer ce carton ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_card_' ~ c.id) }}" />
                <button class="px-2 py-1 text-sm bg-red-600 text-white rounded">Supprimer</button>
              </form>
            </td>
          </tr>
        {% else %}
          <tr><td class="p-2 border text-center" colspan="6">Aucun carton.</td></tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  {% if totalPages > 1 %}
    <div class="mt-4 flex items-center justify-between">
      <div class="text-sm text-gray-600">
        Total: {{ totalItems }} carton{{ totalItems > 1 ? 's' : '' }}
      </div>
      <div class="flex gap-1">
        {% if currentPage > 1 %}
          <a href="{{ path('admin_card_index', {page: currentPage - 1, search: search}) }}" class="px-3 py-1 bg-gray-200 text-gray-700 rounded hover:bg-gray-300">&laquo; Précédent</a>
        {% endif %}

        {% for p in 1..totalPages %}
          {% if p == currentPage %}
            <span class="px-3 py-1 bg-blue-600 text-white rounded">{{ p }}</span>
          {% elseif (p >= currentPage - 2 and p <= currentPage + 2) or p == 1 or p == totalPages %}
            <a href="{{ path('admin_card_index', {page: p, search: search}) }}" class="px-3 py-1 bg-gray-200 text-gray-700 rounded hover:bg-gray-300">{{ p }}</a>
          {% elseif p == currentPage - 3 or p == currentPage + 3 %}
            <span class="px-3 py-1 text-gray-400">...</span>
          {% endif %}
        {% endfor %}

        {% if currentPage < totalPages %}
          <a href="{{ path('admin_card_index', {page: currentPage + 1, search: search}) }}" class="px-3 py-1 bg-gray-200 text-gray-700 rounded hover:bg-gray-300">Suivant &raquo;</a>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>
{% endblock %}
